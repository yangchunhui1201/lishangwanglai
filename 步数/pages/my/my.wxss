.lhh{
  position: relative;
}
.lhh::after{
  content: "收入详情";
  display: block;
  position: absolute;
  width:100rpx;
  height: 30rpx;
  background: #ffd97c;
  font-size:18rpx;
  text-align: center;
  line-height: 30rpx;
  color:#c14625;
  top:-30rpx;
  left:100rpx;
  border-radius: 10rpx 10rpx 10rpx 0;
}
.lhh::before{
  content: "";
  display: block;
  position: absolute;
  width: 0;
  height: 0;
  border: 6rpx solid #ffd97c;
  top:-5rpx;
  border-bottom-color:transparent;
  border-right-color: transparent; 
  left:100rpx;
}
